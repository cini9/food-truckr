<div class="banner" style="background-image: url('https://images.unsplash.com/photo-1533229613598-751dc97ec35f?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1650&q=80')">
  <h1>Your bookings</h1>
</div>

<h2 class="mt-3 row justify-content-center">So far you have booked</h2>

<div class="index container mt-3">
  <div class="cards">
    <div class="row">
      <ul>
        <li><h3>Food Truck name</h3></li>
        <% @reservations.each do |reservation| %>
         <li><p><%= reservation.food_truck.name %></p></li>
        <%end %>
      </ul>

      <ul>
        <li><h3>Check-in date</h3></li>
        <% @reservations.each do |reservation| %>
         <li><p><%= reservation.checkin_date %></p></li>
        <%end %>
      </ul>

      <ul>
        <li><h3>Check-out date</h3></li>
        <% @reservations.each do |reservation| %>
         <li><p><%= reservation.checkout_date %></p></li>
        <%end %>
      </ul>

      <ul>
        <li><h3>Reservation status</h3></li>
        <% @reservations.each do |reservation| %>
          <% if reservation.accepted_at == nil%>
            <li><p><%="Not accepted yet"%></p></li>
          <% elsif reservation.accepted_at != nil && paid_at == nil%>
            <li><p><%="Not paid yet"%></p></li>
          <% else %>
            <li><p><%="paid" %></p></li>
          <%end %>
        <%end %>
      </ul>







        <% if false %>
          <% if foodtruck.photo.present? %>
            <% url = cl_image_path foodtruck.photo, height: 300, width: 300, crop: :fill %>
          <% else %>
            <% url = cl_image_path "generic_l79l58", height: 300, width: 300, crop: :fill %>
          <% end %>

      <div class="col-4">
        <%= link_to food_truck_path(reservation) do %>
          <div class="card-category my-2", id="reservation-card", style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= url %>')">
            <%= reservation.food_truck.name %>
          </div>
        <% end %>
      <% end %>

      </div>
    </div>
  </div>
</div>


<div class="container">
  <div class="row py-4">
    <div class="col-md-3"><%= image_tag @reservation.food_truck.photo_url, width: '100%' %></div>
    <div class="col">
      <h1>Order #<%= @reservation.id %> <small><span class="badge badge-primary"><%= @reservation.state %></span></small></h1>
      <ul class="list-unstyled">
        <li><strong>ISSUED ON</strong> <%= @reservation.created_at.to_date %></li>
        <li><strong>TEDDY</strong> <%= @reservation.food_truck.name %></li>
        <li><strong>TOTAL</strong> <%= humanized_money_with_symbol @reservation.amount_cents %></li>
        </li>
      </ul>
      <p>Estimated delivery in <strong>2 business days</strong></p>
    </div>
  </div>
</div>
